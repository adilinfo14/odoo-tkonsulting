<odoo>

    <!-- Action -->
    <record id="action_tko_timbre" model="ir.actions.act_window">
        <field name="name">Timbres fiscaux</field>
        <field name="res_model">tko.timbre</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vue liste -->
    <record id="view_tko_timbre_tree" model="ir.ui.view">
        <field name="name">tko.timbre.tree</field>
        <field name="model">tko.timbre</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="country_id" />
                <field name="partner_id"/>                
                <field name="amount" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <!-- Vue formulaire (déjà vue) -->
    <record id="view_tko_timbre_form" model="ir.ui.view">
        <field name="name">tko.timbre.form</field>
        <field name="model">tko.timbre</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="country_id" />
                         <field name="partner_id"/>
                        <field name="amount" />
                        <field name="active" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>